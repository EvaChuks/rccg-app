<% layout('layouts/home-theme') %>
    <!-- Breadcrumb Area -->
    <section class="breadcrumb-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>LogIn</h2>
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="/">Home</a></li>
                        <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>LogIn</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- End Breadcrumb Area -->
    <div class="container d-flex justify-content-center align-items-center mt-3 mb-4">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="text-center">Login</h5>
                        <form action="/login" method="POST" novalidate class="validated-form">
                            <div class="mb-3 form-group">
                                <label for="username" class="form-label">Username:</label>
                                <input type="text" name="username" id="username" class="form-control" required
                                    autofocus>

                            </div>
                            <div class="mb-3 form-group">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" name="password" id="password" class="form-control" required>

                            </div>
                            <div class="mb-3 form-group">
                                <button class="btn btn-primary btn-block ">Login</button>
                                <a href="/forgot">Forgot Your Password?</a>

                            </div>
                        </form>
                    </div>


                </div>

            </div>

        </div>
    </div>