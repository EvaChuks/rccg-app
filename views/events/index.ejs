<% layout('layouts/home-theme') %>
    <!-- Breadcrumb Area -->
    <section class="breadcrumb-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Events</h2>
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="">Home</a></li>
                        <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>Up coming events</li>
                    </ul>
                    
                </div>
            </div>
        </div>
    </section>
    <!-- End Breadcrumb Area -->
    <!-- Blog Area -->
    <section class="blog-three">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% for(let event of events){ %>
                        <div class="blog-box d-flex">
                            <div class="blog-image">
                                <% if(event.images.length){ %>
                                    <a href=""><img class="img-fluid" src="<%=event.images[0].thumbnail  %> ">
                                            <% }else{ %>
                                                <img class="img-fluid" src="https://image.shutterstock.com/image-photo/word-default-on-wooden-cubes-600w-291927557.jpg">

                                                <% } %>
                                            </a>
                            </div>
                                <div class="blog-content">
                                     <h2><a href="events/<%=event.slug %>">
                                        <%= event.title %>
                                    </a></h2>
                                    <ul class="list-unstyled list-inline">
                                        <li class="list-inline-item"><i class="fa fa-map-marker"></i>
                                             <%= event.venue%>
                                        </li>

                                    </ul>
                                    <h3>
                                     Starts: <%=event.starts%>
                                            <span><a href="events/<%=event.slug %> ">Read More</a></span>
                                    </h3>

                                </div>
                            </div>
                                <% } %>
                </div>
            </div>
        </div>
    </section>