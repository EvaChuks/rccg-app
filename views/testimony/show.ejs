<% layout('layouts/home-theme') %>
    <!-- Breadcrumb Area -->
    <section class="breadcrumb-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Paise God!</h2>
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="/">Home</a></li>
                        <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>Testimony</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- End Breadcrumb Area -->
    <!-- Welcome Area -->
    <section class="welcome-area">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="welcome-box">
                        <h4>
                            <%= testimony.title %>
                        </h4>
                        <img src="/images/heartbeat.png" alt="">
                        <p>
                            <%- testimony.body %>
                        </p>
                    </div>
                    <% if(currentUser && testimony.author.equals(currentUser._id)|| currentUser && currentUser.isAdmin){
                        %>
                        <div class="card-body">
                            <a href="/testimony/<%=testimony.slug %>/edit " class="btn btn-primary">Edit
                                testimony</a>
                            <form class="d-inline" action="/testimony/<%=testimony.slug %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete </button>
                            </form>

                        </div>
                        <% } %>
                </div>
                <div class="col-md-6">
                    <div class="about-image">
                        <div id="daddy-go" class="card mb-3">
                            <div class="image-box">
                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        <% testimony.images.forEach((img, i)=>{ %>
                                            <div class="carousel-item <%=  i === 0 ? 'active' : '' %> ">
                                                <img src="<%= img.url %> " class="d-block w-100" alt="">
                                            </div>
                                            <% }) %>

                                    </div>
                                    <% if(testimony.images.length> 1) { %>
                                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                            data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                            data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>


                                        <% } %>
                                </div>

                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-center">My Name is:</h5>
                                <p class="card-text text-muted text-capitalize text-center">
                                    <%= testimony.author.firstname + " " + testimony.author.lastname %>
                                </p>
                                <p class="card-text"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Welcome Area -->